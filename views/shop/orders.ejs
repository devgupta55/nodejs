<%- include ('../includes/head.ejs') %>

<body>
    <header class = "main-header">
        <%- include ('../includes/navigation.ejs') %>
    </header>
    <main>
        <% if (orders.length <= 0) { %>
            <h1>NOthing there!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1># <%= order._id %></h1>
                        <ul>
                            <% order.products.forEach(p => { %>
                                <li><%= p.product.title %> ( <%= p.quantity %> )</li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
<%- include ('../includes/end.ejs') %>